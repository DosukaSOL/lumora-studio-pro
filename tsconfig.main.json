{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist/main",
    "rootDir": "src/main",
    "baseUrl": "."
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules"]
}
